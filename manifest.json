{
  "manifest_version": 3,
  "name": "Quicko",
  "version": "1.0",
  "description": "Save and manage quick shortcuts",
  "permissions": ["storage"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
  },
  "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
  },
  "commands": {
      "open-quicko": {
          "suggested_key": {
              "default": "Alt+Q"
          },
          "description": "Open the Quicko extension"
      }
  }
}
