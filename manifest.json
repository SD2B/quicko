{
  "manifest_version": 3,
  "name": "Quicko",
  "version": "1.0",
  "description": "Save and manage quick shortcuts",
  "permissions": ["storage"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
  },
  "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "commands": {
      "open-quicko": {
          "suggested_key": {
              "default": "Alt+Q"
          },
          "description": "Open the Quicko extension"
      },
      "open-clipboard": {
        "suggested_key": {
            "default": "Alt+C"
        },
        "description": "Open secondary popup"
    }
  }
}
